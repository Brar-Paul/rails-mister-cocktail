<div class="container mt-3" id="show-container">

  <div class="cocktail-title">
    <h1> <%= @cocktail.name %> </h1>
    <p> <%= @cocktail.description %></p>
  </div>

  <div class="cocktail-info">
    <div class="container-image">
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="container-ingredients">

      <div id="ingredient-list">
        <h4>Ingredient List</h4>
        <ul>
          <% @cocktail.doses.each do |dose| %>
            <li>
              <%= dose.description %>: <%= Ingredient.find(dose.ingredient_id).name %> |
              <%= link_to "âŒ", dose_path(dose), method: :delete  %>
            </li>
          <% end %>
        </ul>
      </div>
      <hr>
      <div id="ingredient-form">
        <p>Add Ingredients</p>
        <%= simple_form_for([@cocktail, @dose]) do |f| %>
            <%= f.input :description %>
            <%= f.association :ingredient %>
            <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>

  <h4> Reviews </h4>

  <div class="reviews">

    <div id="review-container">
      <% @cocktail.reviews.each do |review| %>
        <div class="card-product">
          <img src="user.png" />
          <div class="card-product-infos">
            <h2>Product name</h2>
            <p>Product description with <strong>relevant info</strong> only.</p>
          </div>
        </div>
      <% end %>
    </div>

    <div id="review-form">
      <p> Add a review </p>
        <%= simple_form_for([@cocktail, @review]) do |f| %>
          <%= f.input :content %>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
    </div>

  </div>

</div>

